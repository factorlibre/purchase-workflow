<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_order_qty_on_line_form" model="ir.ui.view">
            <field name="name">purchase.order.form.qty.on.line</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase_stock_on_line.purchase_order_qty_on_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='qty_available']"
                        position="before">
                    <field name="real_qty_available" string="Available"/>
                </xpath>
            </field>
        </record>


        <record id="purchase_order_line_qty_on_line_form" model="ir.ui.view">
            <field name="name">purchase.order.line.form.qty.on.line</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase_stock_on_line.purchase_order_line_qty_on_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_available']"
                        position="before">
                    <field name="real_qty_available"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>