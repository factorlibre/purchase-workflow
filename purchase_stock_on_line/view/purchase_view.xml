<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_order_qty_on_line_form" model="ir.ui.view">
            <field name="name">purchase.order.form.qty.on.line</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_qty']"
                        position="before">
                    <field name="qty_available"/>
                    <field name="virtual_available"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_line_qty_on_line_form" model="ir.ui.view">
            <field name="name">purchase.order.line.form.qty.on.line</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']"
                        position="after">
                    <field name="qty_available"/>
                    <field name="virtual_available"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>